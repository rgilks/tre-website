{
  "name": "tre-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "check": "npm run lint && npm run type-check && vitest --run",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "nuke": "rm -rf .next .open-next .wrangler node_modules package-lock.json && npm install && npm run dev",
    "deps": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm run nuke",
    "build:cf": "npx @opennextjs/cloudflare@latest build",
    "deploy:cf": "wrangler deploy",
    "pwa:test": "lighthouse http://localhost:3000 --view --output=html --output-path=./lighthouse-report.html",
    "pwa:audit": "lighthouse http://localhost:3000 --only-categories=pwa --output=json --output-path=./lighthouse-pwa.json"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "framer-motion": "^12.23.12",
    "immer": "^10.1.1",
    "next": "15.5.0",
    "react": "^19",
    "react-dom": "^19",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "1.3.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "open-next": "^3.1.3",
    "wrangler": "4.22.0"
  }
}
